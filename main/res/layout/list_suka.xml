<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/mybg"
    android:layout_marginTop="5dp"
    android:elevation="15dp">

    <ImageView
        android:id="@+id/imV"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:src="@drawable/header"
        android:padding="3dp"/>
    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imV"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/tv_ltn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_nama"
        android:layout_below="@+id/tv_nama"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:padding="3dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/tv_emp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_ltn"
        android:layout_below="@+id/tv_nama"
        android:text="EMP"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:padding="3dp"
        android:layout_marginLeft="1dp"/>

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_emp"
        android:layout_below="@+id/tv_nama"
        android:text="Pemilik :"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:padding="3dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/pemilik_suka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/owner"
        android:layout_below="@+id/tv_nama"
        android:text="Tidak Ada"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:padding="3dp"
        android:layout_marginLeft="0dp"/>

</RelativeLayout>